{
    "name": "twitter",
    "version": "1.0.0",
    "description": "React Twitter Clone",
    "main": "build/server/index.js",
    "author": "Tom Williams <tcwilliamscc@gmail.com>",
    "license": "MIT",
    "scripts": {
        "start": "node ${npm_package_main}",
        "clean": "rm -rf build",
        "prebuild": "npm run clean",
        "build": "npm run build:server && npm run build:assets",
        "build:server": "mkdir -p build/server && cp src/server/index.js build/server",
        "build:assets": "webpack --config webpack.config.js",
        "prewatch": "npm run clean",
        "watch": "NODE_ENV=development npm-run-all --parallel watch:server watch:assets",
        "watch:server": "npm run build:server && nodemon ${npm_package_main}",
        "watch:assets": "npm run build:assets -- --watch",
        "test": "jest --coverage"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.3",
        "babel-loader": "^7.1.5",
        "babel-preset-env": "^1.7.0",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "enzyme-to-json": "^3.3.4",
        "jest": "^23.4.1",
        "jest-serializer-html": "^5.0.0",
        "nodemon": "^1.18.3",
        "npm-run-all": "^4.1.3",
        "webpack": "^4.16.1",
        "webpack-cli": "^3.1.0"
    },
    "dependencies": {
        "express": "^4.16.3",
        "react": "^16.4.1",
        "react-dom": "^16.4.1"
    }
}
